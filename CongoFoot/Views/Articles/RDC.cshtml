@model PagedList.IPagedList<CongoFoot.Models.Article>
@using PagedList.Mvc;
@*<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />*@

@*@model IEnumerable<CongoFoot.Models.Article>*@

@{
    ViewBag.Title = "Actu de la RDC";
}

<!-- Inner page Bar -->
<div id="page-bar">
    <div class="container">
        <div class="row">
            @*<div class="col-md-9 col-sm-8 col-xs-12">
                <div class="page-title">
                    <h1 class="text-uppercase">Actu de la RDC</h1>
                </div>
            </div>*@
            <div class="col-xs-12">
                <ul class="breadcrumb">
                    <li>
                        <i class="fa fa-home" aria-hidden="true"></i> @Html.ActionLink("Accueil", "Index", "Home", new { area = "" }, null)
                    </li>
                    <li class="active">RDC</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Inner page Bar -->
<!-- 3 Column video -->

<div id="secondary-section" class="vids-3-column">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-sm-8">
                <div class="st-3-column secondary-vid">
                    <div class="vid-heading overflow-hidden">
                        <span style="visibility: visible; animation-duration: 0.8s; animation-name: fadeInUp;" class="wow fadeInUp" data-wow-duration="0.8s">Actu de la RDC</span>
                        <div style="visibility: visible; animation-duration: 0.8s; animation-name: zoomIn;" class="hding-bottm-line wow zoomIn" data-wow-duration="0.8s"></div>
                    </div>
                    <div class="row">
                        <div class="vid-container">

                            @foreach (var item in Model)
                            {
                                <div class="col-md-4 col-sm-6">
                                    <div class="latest-vid-img-container">
                                        <div class="vid-img">
                                            <img class="img-responsive" src="@Html.DisplayFor(modelItem => item.UrlImageMiniature)" alt="video image">
                                            <div class="overlay-div"></div>
                                        </div>
                                        <div class="vid-text">
                                            <p><span>Par</span> <a href="#">@Html.DisplayFor(modelItem => item.Auteur)</a></p>
                                            <h1>@Html.ActionLink(item.Titre, "Details", new { id = item.ID })</h1>
                                            <p class="vid-info-text">
                                                <span>@Html.DisplayFor(modelItem => item.DatePublication)</span>
                                                <span>/</span>
                                                <span>
                                                    @Html.DisplayFor(modelItem => item.Categorie)
                                                </span>
                                                <span>/</span>
                                                <span>410 views</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>

                        <!--  pagination START -->

                        <div class="pagination-container text-center">
                            @Html.PagedListPager(Model, page => Url.Action("RDC",
                           new
                           {
                               page,
                               sortOrder = ViewBag.CurrentSort,
                               currentFilter = ViewBag.CurrentFilter
                           }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
                        </div>

                        <!--  pagination END -->


                    </div>
                </div>
            </div>


            <!-- bar lateral -->
            <div class="col-md-3 col-sm-4">
                <div class="sidebar">
                    @Html.Partial("LeftBarView")
                </div>
            </div>
            <!-- bar lateral -->



        </div>
    </div>
</div>

<!-- 3 Column Video -->
